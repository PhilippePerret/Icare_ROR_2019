<% set_title('Nouveau mot de passe')%>

<div class="container">
  <div class="row">
    <div class="col col-md-4 col-md-offset-2">

      <%= form_for(:newpass, url: password_reset_path(@user.id), method: :patch) do |f| %>

        <%= f.label :password, I18n.t('users.password.new.label') %>
        <%= f.password_field :password, required: true %>

        <%= f.label :password_confirmation, I18n.t('users.password.confirmation.label') %>
        <%= f.password_field :password_confirmation, required: true %>

        <div class="row right">
          <%= f.submit I18n.t('users.password.change.button'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
