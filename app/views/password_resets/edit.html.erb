<% set_title('Nouveau mot de passe')%>

<div class="container">
  <div class="row">
    <div class="col col-md-4 col-md-offset-2">

      <%= form_for(:newpass, url: password_reset_path(@user.id), method: :patch) do |f| %>

        <%= f.label :password, 'Nouveau mot de passe' %>
        <%= f.password_field :password, required: true %>

        <%= f.label :password_confirmation, 'Confirmation du nouveau mot de passe' %>
        <%= f.password_field :password_confirmation, required: true %>

        <div class="row right">
          <%= f.submit 'Changer le mot de passe', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
